<resources>

    <style name="AppTheme" parent="AppTheme.Base" />

    <style name="AppTheme.Base" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackground">@color/background</item>

        <item name="android:windowShowWallpaper">true</item>
        <item name="android:colorBackgroundCacheHint">@null</item>

        <!--<item name="selectableItemBackground">@drawable/item_background_pitch</item>-->
        <!--<item name="android:selectableItemBackground">@drawable/item_background_pitch</item>-->

        <item name="colorButtonNormal">@color/button</item>

        <item name="material_drawer_window_background">@color/drawer</item>
        <item name="material_drawer_background">@color/drawer</item>
        <item name="material_drawer_icons">@color/text</item>
        <item name="material_drawer_primary_text">@color/text</item>
        <item name="material_drawer_primary_icon">@color/texttt</item>
        <item name="material_drawer_secondary_text">@color/textt</item>
        <item name="material_drawer_hint_text">@color/textt</item>
        <item name="material_drawer_divider">@color/divider</item>
        <item name="material_drawer_selected">@color/drawerr</item>
        <item name="material_drawer_selected_text">@color/primary</item>
        <item name="material_drawer_header_selection_text">@color/text</item>
    </style>


    <style name="MyActionBarTheme" parent="ThemeOverlay.AppCompat">
        <item name="android:textColorPrimary">@color/text</item>
        <item name="android:textColorSecondary">@color/text</item>
    </style>

    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

</resources>
